@model List<QuieroPizza.BL.Producto>
@{
    ViewBag.Title = "Index";
}

<h2>Productos</h2>


<table class="table table-bordered table-hover" > 
    <thead>
        <tr>
            <th>
               CODIGO
            </th>
            <th>
               DESCRIPCION
            </th>
            <th>
                PRECIO
            </th>
        </tr>
    </thead>
    @foreach (var producto in Model)
    {
    <tr>
        <td>
           @producto.Id
        </td>
        <td>
           @producto.Descripcion
        </td>
        <td>
           @producto.Precio
        </td>
        
    </tr>
    }
</table>